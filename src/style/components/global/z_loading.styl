.global-z-loading {
  position absolute
  z-index 10
  width 100%
  height 100%
  //background-color rgba(0, 0, 0, .5)
  .z-loading {
    color color-base
    //animation spin 2s linear infinite;
  }
}

// 旋转动画
@-webkit-keyframes spin
  0%
    transform rotate(0deg)
  50%
    transform rotate(180deg)
  100%
    transform rotate(360deg);




